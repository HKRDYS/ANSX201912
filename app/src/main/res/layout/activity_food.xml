<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@mipmap/img4">
    <TextView
            android:text="舌尖上的美食"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"/>
    <Button
            android:text="盐水鸭又叫桂花鸭，是南京著名的特产，因南京有“金陵”别称，故也称“金陵盐水鸭”"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:id="@+id/button1"/>

<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="129dp"
            android:layout_height="100dp"
            android:src="@mipmap/food1"/>

    <ImageView
            android:layout_width="129dp"
            android:layout_height="100dp"
            android:src="@mipmap/food2"/>

    <ImageView
            android:layout_width="129dp"
            android:layout_height="100dp"
            android:src="@mipmap/food3"/>
</LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:text="天生丽质，小龙虾就是这范儿！红艳亮丽的外衣，谁人能敌？"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/food4"/>

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/food5"/>

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/food6"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:text="雪媚娘细白软糯，里面是奶香怡人的淡奶油，裹着好吃的水果粒, 酸酸甜甜、口感丰富"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/button3"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/food7"/>

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/food8"/>

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/food9"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/btn_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="主页"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>

        <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:text="返回"/>

    </LinearLayout>

</LinearLayout>