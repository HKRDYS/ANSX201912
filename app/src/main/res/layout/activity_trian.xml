<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/img1">
    <TextView
            android:text="旅行圣地"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"/>
    <Button
            android:text=" 醉美大理  ，苍山雪飘  ，洱海月明  ，古城佳丽 "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:id="@+id/button1"/>

<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="129dp"
            android:layout_height="100dp"
            android:src="@mipmap/tr1"/>

    <ImageView
            android:layout_width="129dp"
            android:layout_height="100dp"
            android:src="@mipmap/tr2"/>

    <ImageView
            android:layout_width="129dp"
            android:layout_height="100dp"
            android:src="@mipmap/tr3"/>

</LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:text="九寨沟旅游景区 游览区气候宜人,冬无寒风,夏季凉爽,四季美丽,是世界上旅游热点之一。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:id="@+id/button2"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/tr4"/>

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/tr5"/>

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/tr6"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:text=" 有雪才叫冬天，长白才好撒欢！ 走进林海雪原，方知长白不寒。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:id="@+id/button3"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/tr7"/>

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/tr8"/>

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/tr9"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/btn_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="主页"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>

        <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:text="返回"/>

    </LinearLayout>

</LinearLayout>