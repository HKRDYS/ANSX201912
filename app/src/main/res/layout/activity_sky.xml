<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/img2">
    <TextView
            android:text="天文学"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"/>
    <Button
            android:text="我国天文学家发现的首颗太阳系外行星获名“望舒”，意为月神。"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:id="@+id/button1"/>

<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="129dp"
            android:layout_height="100dp"
            android:src="@mipmap/sky1"/>

    <ImageView
            android:layout_width="129dp"
            android:layout_height="100dp"
            android:src="@mipmap/sky2"/>

    <ImageView
            android:layout_width="129dp"
            android:layout_height="100dp"
            android:src="@mipmap/sky3"/>

</LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:text="我国发射“天琴一号”卫星 从太空探测引力波。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/button2"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/sky4"/>

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/sky5"/>

        <ImageView
                android:layout_width="129dp"
                android:layout_height="100dp"
                android:src="@mipmap/sky6"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:text="颠覆人们对恒星级黑洞形成的传统认知——揭开“黑洞之王”的神秘面纱。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/button3"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <ImageView
                android:layout_width="129dp"
                android:layout_height="90dp"
                android:src="@mipmap/sky7"/>

        <ImageView
                android:layout_width="129dp"
                android:layout_height="90dp"
                android:src="@mipmap/sky8"/>

        <ImageView
                android:layout_width="129dp"
                android:layout_height="90dp"
                android:src="@mipmap/sky9"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/btn_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="主页"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>

        <Button

                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:text="返回"/>

    </LinearLayout>


</LinearLayout>