<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#0065a4"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<!-- 登录界面 -->
    <!--
    version = 1.0
    date 2019/12/26
    android:id="@+id/edit_login_username"  用户账户名
    android:id="@+id/edit_login_password"  用户密码
    android:id="@+id/img_btn_login"        登录按钮
    android:id="@+id/img_btn_cancel"       取消按钮
    android:id="@+id/btn_login_reg"        注册按钮



    -->
    <TextView android:layout_width="match_parent" android:layout_height="60dp"
              android:background="#00000000"
    />


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:minWidth="160dp"
              android:text="@string/Login_screen"
              android:textSize="36sp"
              android:textColor="#111111"
              android:layout_marginLeft="110dp"
              android:layout_marginBottom="50dp"
    />


    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:orientation="horizontal"
                  android:layout_marginBottom="40dp"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/username"
                  android:textSize="20sp"
                  android:minWidth="80dp"

        />
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:background="#dddddd"
                  android:minWidth="200dp"
                  android:id="@+id/edit_login_password"
        />
    </LinearLayout>


    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:orientation="horizontal"
                  android:layout_marginBottom="40dp"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/password"
                  android:textSize="20sp"
                  android:minWidth="80dp"
        />
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:background="#dddddd"
                  android:minWidth="200dp"
                  android:id="@+id/edit_login_username"
        />
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="100dp"
                  android:orientation="horizontal"
                  android:layout_marginBottom="40dp"
    >
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:src="@drawable/login_btn"
                     android:layout_marginRight="60dp"
                     android:id="@+id/img_btn_login"
                     android:background="#00000000"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:src="@drawable/cancel_btn"
                     android:id="@+id/img_btn_cancel"
                     android:background="#00000000"/>
    </LinearLayout>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/reg"
            android:textAlignment="center"
            android:background="#00000000"
            android:textSize="12sp"
            android:textColor="#555555"
            android:id="@+id/btn_login_reg"

    />

        <TextView android:layout_width="match_parent" android:layout_height="50dp"/>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
    >
        <Button android:layout_width="50dp" android:layout_height="30dp"
                android:text="服务条款"
                android:textSize="6sp"
                android:layout_marginLeft="120dp"
                android:background="#00000000"
        />

        <Button android:layout_width="50dp" android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:textSize="6sp"
                android:text="用户需知"
                android:background="#00000000"
        />
    </LinearLayout>

</LinearLayout>