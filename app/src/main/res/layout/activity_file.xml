<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/img3">

    <TextView
            android:text="军事"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"/>
    <Button
            android:text="城外大军猛烈冲锋，首都即将沦陷，土耳其：时机已到，三军出动。"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:id="@+id/button1"/>

<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView android:layout_width="128dp"
               android:layout_height="100dp"
               android:src="@mipmap/a1"/>

    <ImageView android:layout_width="128dp"
               android:layout_height="100dp"
               android:src="@mipmap/a2"/>

    <ImageView android:layout_width="128dp"
               android:layout_height="100dp"
               android:src="@mipmap/a3"/>
</LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:text="中国海军西宁舰抵达伊朗受热烈欢迎，先到的俄军也在舰上致意。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:id="@+id/button2"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView android:layout_width="128dp"
                   android:layout_height="100dp"
                   android:src="@mipmap/a4"/>

        <ImageView android:layout_width="128dp"
                   android:layout_height="100dp"
                   android:src="@mipmap/a5"/>

        <ImageView android:layout_width="128dp"
                   android:layout_height="100dp"
                   android:src="@mipmap/a6"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:text="国防部霸气喊话：如有人要把中国逼成对手，中国定是合格对手。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:id="@+id/button3"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView android:layout_width="128dp"
                   android:layout_height="100dp"
                   android:src="@mipmap/a7"/>

        <ImageView android:layout_width="128dp"
                   android:layout_height="100dp"
                   android:src="@mipmap/a8"/>

        <ImageView android:layout_width="128dp"
                   android:layout_height="100dp"
                   android:src="@mipmap/a9"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/btn_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="主页"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>

        <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:text="返回"/>
    </LinearLayout>
</LinearLayout>